<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ZhooSoft.Auth.Views.OTPVerificationPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ctrl="clr-namespace:ZhooSoft.Controls;assembly=ZhooSoft.Controls"
    xmlns:resource="clr-namespace:ZhooSoft.Auth.Resources.Strings"
    Title="OTPVerificationPage"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0.0" Color="#4DB6AC" />
            <!--  Top  -->
            <GradientStop Offset="0.9" Color="#4DB6AC" />
            <!--  90% Teal  -->
            <GradientStop Offset="1.0" Color="White" />
            <!--  Top: Accent/Teal  -->
        </LinearGradientBrush>
    </ContentPage.Background>
    <ScrollView Padding="20,20,20,0">
        <ctrl:CustomBorder
            MaximumHeightRequest="600"
            MaximumWidthRequest="400"
            Stroke="Transparent"
            StrokeShape="RoundRectangle 20,20,0,0"
            VerticalOptions="End">
            <VerticalStackLayout
                Padding="20"
                Spacing="15"
                VerticalOptions="End">

                <ctrl:CustomBorder BackgroundColor="Transparent" Stroke="Transparent">
                    <Image Source="drivericon.png" />
                </ctrl:CustomBorder>

                <Label
                    FontAttributes="Bold"
                    FontSize="36"
                    HorizontalOptions="Center"
                    Text="ZHOO DRIVE"
                    TextColor="White" />

                <ctrl:CustomBorder
                    Padding="30,30,30,50"
                    BackgroundColor="White"
                    Stroke="White"
                    StrokeShape="RoundRectangle 20,20,0,0"
                    VerticalOptions="Fill">

                    <Grid
                        Padding="10"
                        ColumnDefinitions="*"
                        RowDefinitions="auto,auto,auto,auto,auto,auto,auto,auto,auto"
                        RowSpacing="10">

                        <!--  Title  -->
                        <Label
                            Grid.Row="0"
                            FontAttributes="Bold"
                            FontSize="24"
                            HorizontalOptions="Center"
                            Text="{x:Static resource:AppResources.OtpTitle}" />

                        <!--  Subtitle with phone number  -->
                        <Label
                            Grid.Row="1"
                            FontSize="12"
                            HorizontalTextAlignment="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span FontSize="14" Text="{x:Static resource:AppResources.OtpSubTitle}" />
                                    <Span
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        Text="{Binding PhoneNumber}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <!--  Countdown timer  -->
                        <Label
                            Grid.Row="2"
                            FontSize="12"
                            HorizontalOptions="Center"
                            Text="{Binding TimerText}"
                            TextColor="#00796B" />

                        <!--  OTP entry  -->
                        <ctrl:CustomOTPEntryView
                            Grid.Row="3"
                            OtpCode="{Binding EnteredOtp}"
                            OtpCompletedCommand="{Binding SubmitOtpCommand}" />

                        <!--  Error message  -->
                        <Label
                            x:Name="OtpErrorLabel"
                            Grid.Row="4"
                            FontSize="14"
                            HorizontalOptions="Center"
                            IsVisible="{Binding ShowError}"
                            Text="Invalid OTP. Please try again."
                            TextColor="Red" />

                        <!--  Submit button  -->
                        <Button
                            Grid.Row="5"
                            BackgroundColor="#00796B"
                            Command="{Binding SubmitCommand}"
                            HorizontalOptions="Center"
                            Text="{x:Static resource:AppResources.Submit}"
                            TextColor="White"
                            WidthRequest="250" />

                        <!--  Resend OTP  -->
                        <HorizontalStackLayout
                            Grid.Row="6"
                            HorizontalOptions="Center"
                            Spacing="5"
                            VerticalOptions="Center">
                            <Label
                                FontSize="12"
                                Text="{x:Static resource:AppResources.OtpResentTxt}"
                                TextColor="Gray"
                                VerticalTextAlignment="Center" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="{x:Static resource:AppResources.OtpReTxt}"
                                TextColor="#00796B"
                                VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ResendCodeCommand}" />
                                </Label.GestureRecognizers>
                            </Label>
                        </HorizontalStackLayout>

                        <!--  Change phone number button  -->
                        <Button
                            Grid.Row="7"
                            BackgroundColor="#00796B"
                            Command="{Binding ChangePhoneNumberCommand}"
                            HorizontalOptions="Center"
                            Text="{x:Static resource:AppResources.ChangNoTxt}"
                            TextColor="White"
                            WidthRequest="200" />

                    </Grid>
                </ctrl:CustomBorder>
            </VerticalStackLayout>


        </ctrl:CustomBorder>
    </ScrollView>
</ContentPage>