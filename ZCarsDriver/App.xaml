<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="ZCarsDriver.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:ZCarsDriver.Converters"
    xmlns:local="clr-namespace:ZCarsDriver"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/AppStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToCheckImageConverter x:Key="BoolToCheckImageConverter" />
            <converters:ApprovalStatusToTextConverter x:Key="ApprovalStatusToTextConverter" />
            <converters:ApprovalStatusToBGColorConverter x:Key="ApprovalStatusToBGColorConverter" />
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
