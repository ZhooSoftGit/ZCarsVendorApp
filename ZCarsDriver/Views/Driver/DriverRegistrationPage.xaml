<base:BaseContentPage
    x:Class="ZCarsDriver.Views.Driver.DriverRegistrationPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:ZhooSoft.Core;assembly=ZhooSoft.Core"
    xmlns:ctrl="clr-namespace:ZhooSoft.Controls;assembly=ZhooSoft.Controls"
    xmlns:header="clr-namespace:ZCarsDriver.Templates"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:ZCarsDriver.ViewModel"
    x:Name="DriverRegistrationUI"
    x:TypeArguments="vm:DriverRegistrationViewModel"
    NavigationPage.HasNavigationBar="False">

    <Grid HorizontalOptions="Fill" VerticalOptions="Fill">

        <Grid RowDefinitions="Auto,*">
            <!--  Header Section  -->
            <header:CustomNavigationHeader Grid.Row="0" />

            <!--  Main Content Section  -->
            <ScrollView
                Grid.Row="1"
                HorizontalOptions="Fill"
                VerticalOptions="Fill">
                <Grid
                    Grid.Row="1"
                    Padding="20"
                    RowDefinitions="auto,auto,auto,*"
                    RowSpacing="20">

                    <VerticalStackLayout>
                        <ctrl:CustomLabel
                            FontSize="32"
                            Text="Welcome"
                            TextColor="{DynamicResource Black}" />
                    </VerticalStackLayout>

                    <!--  Instruction Text  -->
                    <Label
                        Grid.Row="1"
                        FontSize="14"
                        HorizontalTextAlignment="Center"
                        Text="To complete your verification, please fill out your profile and upload all the necessary documents."
                        TextColor="Gray" />

                    <!--  Document List  -->
                    <CollectionView
                        x:Name="CheckListView"
                        Grid.Row="3"
                        ItemsSource="{Binding CheckListItems}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <ctrl:CustomBorder
                                    Margin="5"
                                    Padding="10"
                                    BackgroundColor="White"
                                    CornerRadius="10"
                                    Stroke="#EBEBEA">
                                    <Grid
                                        ColumnDefinitions="Auto,*, Auto, Auto"
                                        ColumnSpacing="10"
                                        RowDefinitions="auto,auto">

                                        <Border
                                            Grid.RowSpan="2"
                                            Grid.Column="0"
                                            Padding="12"
                                            BackgroundColor="#F7F7F7"
                                            StrokeShape="RoundRectangle 999"
                                            StrokeThickness="0">
                                            <Label
                                                FontFamily="zappfont"
                                                FontSize="24"
                                                Text="{Binding IconName}"
                                                TextColor="{DynamicResource Primary}"
                                                VerticalOptions="Center" />
                                        </Border>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Grid.ColumnSpan="2"
                                            FontSize="18"
                                            Text="{Binding ItemName}"
                                            VerticalOptions="Center" />

                                        <Border
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Padding="10,0"
                                            BackgroundColor="{Binding ApprovalStatus, Converter={StaticResource ApprovalStatusToBGColorConverter}}"
                                            StrokeShape="RoundRectangle 6">
                                            <Label
                                                FontSize="18"
                                                Text="{Binding ApprovalStatus, Converter={StaticResource ApprovalStatusToTextConverter}}"
                                                TextColor="{DynamicResource Black}"
                                                VerticalTextAlignment="Center" />
                                        </Border>

                                        <Label
                                            Grid.RowSpan="2"
                                            Grid.Column="3"
                                            FontFamily="zappfont"
                                            FontSize="24"
                                            Text="&#xe9b1;"
                                            TextColor="{DynamicResource Gray300}"
                                            VerticalOptions="Center" />
                                    </Grid>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Path=BindingContext.CheckListCmd, Source={x:Reference CheckListView}}" CommandParameter="{Binding .}" />
                                    </Border.GestureRecognizers>
                                </ctrl:CustomBorder>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </ScrollView>
        </Grid>

    </Grid>
</base:BaseContentPage>
