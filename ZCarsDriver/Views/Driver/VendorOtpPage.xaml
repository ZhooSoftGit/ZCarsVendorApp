<base:BaseContentPage
    x:Class="ZCarsDriver.Views.Driver.VendorOtpPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:ZhooSoft.Core;assembly=ZhooSoft.Core"
    xmlns:ctrl="clr-namespace:ZhooSoft.Controls;assembly=ZhooSoft.Controls"
    xmlns:header="clr-namespace:ZCarsDriver.Templates"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:ZCarsDriver.ViewModel"
    x:TypeArguments="vm:VendorOtpViewModel"
    BackgroundColor="White"
    NavigationPage.HasNavigationBar="False">

    <Grid
        HorizontalOptions="Fill"
        RowDefinitions="auto,*"
        VerticalOptions="Fill">

        <!--  Title  -->
        <header:CustomNavigationHeader Grid.Row="0" />


        <Grid
            Grid.Row="1"
            Padding="10"
            RowDefinitions="Auto,Auto,Auto,*">


            <!--  Title  -->
            <Label
                Grid.Row="0"
                Margin="0,10,0,0"
                FontAttributes="Bold"
                FontSize="24"
                Text="Vendor Contact Number"
                TextColor="Black" />

            <!--  Subtitle  -->
            <Label
                Grid.Row="1"
                Margin="0,5,0,20"
                FontSize="14"
                Text="We Will Send You a Verification Code to this Number."
                TextColor="Gray" />

            <!--  Entry Field with Border  -->
            <ctrl:CustomBorder
                Grid.Row="2"
                Padding="10"
                BackgroundColor="Transparent"
                BorderColor="{x:StaticResource Primary}"
                CornerRadius="10">
                <Entry
                    FontSize="16"
                    Keyboard="Telephone"
                    Placeholder="Enter Phone Number"
                    Text="{Binding PhoneNumber}"
                    TextColor="Black" />
            </ctrl:CustomBorder>

            <!--  Get OTP Button  -->
            <Button
                Grid.Row="3"
                Margin="0,40,0,0"
                BackgroundColor="{x:StaticResource Primary}"
                Command="{Binding GetOtpCommand}"
                CornerRadius="10"
                FontSize="16"
                HeightRequest="50"
                IsEnabled="{Binding IsPhoneValid}"
                Text="Get OTP"
                TextColor="White"
                VerticalOptions="End">
                <Button.Triggers>
                    <DataTrigger
                        Binding="{Binding IsPhoneValid}"
                        TargetType="Button"
                        Value="False">
                        <Setter Property="Opacity" Value="0.7" />
                    </DataTrigger>
                    <DataTrigger
                        Binding="{Binding IsPhoneValid}"
                        TargetType="Button"
                        Value="True">
                        <Setter Property="Opacity" Value="1" />
                    </DataTrigger>
                </Button.Triggers>
            </Button>
        </Grid>
    </Grid>
</base:BaseContentPage>
